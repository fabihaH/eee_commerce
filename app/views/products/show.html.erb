<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Price:</b>
  <%= @product.price %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<%= render "comments/new_comment_form" %>

<% @comments.each do |comment| %>
  <p>
    <span> <%= comment.created_at %> </span>
  </p>
  <p>
    <span><b> Comment: </b></span>
    <%= comment.comment %>
  </p>
<% end %>

